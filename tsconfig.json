{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true
  },
  "include": ["src"]
}
